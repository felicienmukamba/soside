{
  "name": "soside-monorepo",
  "version": "1.0.0",
  "description": "SOSIDE Platform - Consolidated Repository",
  "scripts": {
    "dev:backend": "cd soside-backend && npm run start:dev",
    "dev:frontend": "cd soside-frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "install:all": "npm install && cd soside-backend && npm install && cd ../soside-frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}